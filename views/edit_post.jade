extends layout/dash
block body
  .edit-post.container
    form.post.form-horizontal(action="/dash/post/#{post.id}", method="post")
      .form-group
        label.col-sm-2.control-label(for="title") Title
        .col-sm-10
          p.hint This will be an H1.
          input.form-control(type="text", name="title", value="#{post.title}")

      .form-group
        label.col-sm-2.control-label(for="slug") Slug
        .col-sm-10
          p.hint SEO friendly, unique
          input.form-control(type="text", name="slug", value="#{post.slug}")

      .form-group
        label.col-sm-2.control-label(for="body") Body
        .col-sm-10
          p.hint Write in Markdown, fool.
          textarea.form-control(type="text", name="body", value="")
            = post.body

      .form-group
        label.col-sm-2.control-label(for="tags") Tags
        .col-sm-10
          p.hint Comma separated list.
          input.form-control(type="text", name="tags", value="#{post.tags}")

      .form-group
        .col-sm-4.col-sm-offset-8
          input.form-control.btn.btn-success(type="submit", value="Save")

