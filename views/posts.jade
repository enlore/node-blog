extends layout/base
block body
  .container
    .row
      .col-sm-12
        -each post in posts
          .row
            .col-sm-8
              a(href="posts/#{post._id}")
                h1= post.title

              p!= md(post.body)

              p= new Date(post.publishDate)

              if post.tags
                ul
                  -each tag in post.tags
                    li= tag
