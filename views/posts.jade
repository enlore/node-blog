extends layout/base
block body
  .container
    .row
      .col-sm-12
        -each post in posts
          .row
            .col-sm-8
              a(href="posts/#{post.slug}")
                h1= post.title

              p!= md(post.teaser)
              hr
              p= pretty_date(post.publishDate)

              if post.tags
                ul
                  -each tag in post.tags
                    li
                      a(href="/tags/#{tag}")= tag

              hr
              hr
