extends layout/base
block body
  .container
    form.form-horizontal(action="/post/new", method="post")
      .form-group
        label.col-sm-4.control-label(for="title") Title
        .col-sm-8
          input(type="text", name="title")

      .form-group
        label.col-sm-4.control-label(for="body") Body
        .col-sm-8
          textarea(type="text", name="body")

      .form-group
        label.col-sm-4.control-label(for="tags") Tags
        .col-sm-8
          input(type="text", name="tags")

      .form-group
        .col-sm-8.col-sm-offset-4
          input.btn.btn-primary(type="submit", value="Save")
